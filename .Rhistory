labels <- sprintf(
"<strong>%s</strong><br/> Abstenci√≥: %g%% <br/> Vot: %g%%",
shp@data$Barri, shp@data$Abstencio, shp@data$BComu) %>% lapply(htmltools::HTML)
shp@data$lon <-as.numeric(gsub(",", ".", shp@data$lon))
